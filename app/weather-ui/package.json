  },
  "scripts": {
    "dev": "concurrently \"pnpm dev:tailwind\" \"pnpm dev:backend\" \"pnpm dev:frontend\" \"pnpm dev:reload\"",
    "dev:tailwind": "tailwindcss -w -i src/backend/templates/index.css -o dist/styles.css",
    "dev:backend": "nodemon -w ./src -e ts,njk,css --exec ts-node src/backend/server.ts",
    "dev:reload": "pnpm livereload -w 2500 -e html,css,njk,ts",
    "dev:frontend": "nodemon -w ./src -e ts --exec node build-frontend.js",
    "test": "jest",
    "lint": "eslint",
    "check": "node check.js"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "@tsconfig/strictest": "^2.0.1",
    "@types/babelify": "^7.3.7",
    "@types/browserify": "^12.0.37",
    "@types/core-js": "^2.5.5",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "@types/nunjucks": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "axios-mock-adapter": "^1.21.4",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "glob": "^10.2.3",
    "jest": "^29.5.0",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.22",
    "path": "^0.12.7",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsify": "^5.0.4",
    "typescript": "^5.0.4",
    "uglifyify": "^5.0.2"
  },
  "engines": {
    "node": ">=18.9.1"
  },
  "dependencies": {
    "@fastify/formbody": "^7.4.0",
    "@fastify/static": "^6.10.1",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.17.0",
