{% extends "main.njk" %}

{% block title %}Weather{% endblock %}

{% block content %}
<div class="w-full h-screen flex">
  <div
    class="m-auto max-w-xs flex flex-col gap-5 items-center p-8 rounded-md sm:px-12 bg-gray-200 dark:bg-gray-900 dark:text-gray-100">
    {% if serverMsg %}
    <p class="w-full text-sm dark:bg-red-700 bg-red-400 dark:text-gray-100 mt-2 p-2 rounded text-center">{{ serverMsg }}
    </p>
    {% endif %}
    <div class="text-center">
      <h2 class="text-xl font-semibold border-bottom">Enter a location to get started</h2>
    </div>
    <form class="flex flex-col items-center gap-2" method="GET" action="/">
      <div>
        <input type="text" name="location" placeholder="Location" class="
          h-10  border rounded p-2 text-center
          border-gray-400 text-gray-900
          dark:border-gray-600 dark:text-gray-300 dark:bg-gray-800">
      </div>
      <input type="submit" class="w-full h-10 font-semibold border rounded
        bg-gray-300
        dark:bg-gray-600 dark:border-gray-600 dark:text-gray-300" value="Set Location">
    </form>
  </div>
</div>
{% endblock %}
