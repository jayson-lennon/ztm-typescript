{% extends "main.njk" %}

{% block title %}Weather{% endblock %}

{% block content %}
<div class="w-full h-screen flex">
  <div
    class="m-auto max-w-xs flex flex-col gap-5 items-center p-8 rounded-md sm:px-12 bg-gray-200 dark:bg-gray-900 dark:text-gray-100">
    {% if serverMsg %}
    <p class="w-full text-sm dark:bg-red-700 bg-red-400 dark:text-gray-100 mt-2 p-2 rounded text-center">{{ serverMsg }}
    </p>
    {% endif %}
    <div class="text-center flex flex-col gap-3">
      <h2 class="text-lg font-semibold border-bottom">{{ location }}</h2>
      <p class="text-sm dark:text-gray-300">{{ currentDate }}</p>
    </div>
    <div class="flex flex-col items-center">
      <img src="{{ weather.conditionImg }}" class="dark:invert w-40">
      <p class="dark:text-gray-300 text-center">{{ weather.condition }}</p>
    </div>
    <div class="mb-2 text-3xl flex flex-row gap-2 justify-between">
      <div class="font-semibold text-orange-600 dark:text-yellow-500">{{ weather.highTemp }}{{ weather.temperature.unit }}</div>
      <div>/</div>
      <div class="font-semibold text-blue-800 dark:text-sky-300">{{ weather.lowTemp }}{{ weather.temperature.unit }}</div>
    </div>
    <form class="flex flex-col items-center gap-2" method="GET" action="/">
      <div>
        <input type="text" name="location" placeholder="Location" class="
          h-10  border rounded p-2 text-center
          border-gray-400 text-gray-900
          dark:border-gray-600 dark:text-gray-300 dark:bg-gray-800">
      </div>
      <input type="submit" class="cursor-pointer w-full h-10 font-semibold border rounded
        bg-gray-300
        dark:bg-gray-600 dark:border-gray-600 dark:text-gray-300" value="Update Location">
    </form>
  </div>
</div>
{% endblock %}
